@model GroceryApp.Models.Domain.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Product</legend>

    <div class="display-label">ProductName</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ProductName)
    </div>

    <div class="display-label">UnitPrice</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UnitPrice)
    </div>

    <div class="display-label">QuantityReceived</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.QuantityReceived)
    </div>

    <div class="display-label">Category</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Category.name)
    </div>

    <div class="display-label">Supplier</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Supplier.SupplierName)
    </div>

    <div class="display-label">Unit</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Unit.name)
    </div>

    <div class="display-label">Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ProductID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
